<h1>部活一覧</h1>

<table>
  <thead>
    <tr>
      <!--<th>部活名</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clubs.each do |club| %>
      <tr>
        <td><%= club.name %></td>
        <td><%= link_to '表示', club %></td>
        <td><%= link_to '編集', edit_club_path(club) %></td>
        <td><%= link_to '削除', club, method: :delete, data: { confirm: 'よろしいですか' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

