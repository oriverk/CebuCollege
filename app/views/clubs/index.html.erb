<p id="notice"><%= notice %></p>

<h1>部活一覧</h1>

<table class= "table table-hover table-dark">
  <thead class="thead-light">
    <tr>
      <th>部活名</th>
      <th colspan="3"><%= link_to '部活追加', new_club_path, class:"btn btn-sm btn-block btn-outline-success" %></th>
    </tr>
  </thead>

  <tbody>
    <% @clubs.each do |club| %>
      <tr>
        <td><%= club.name %></td>
        <td><%= link_to '表示', club , class:"btn btn-outline-primary"%></td>
        <td><%= link_to '編集', edit_club_path(club) , class:"btn btn-outline-info"%></td>
        <td><%= link_to '削除', club, method: :delete, data: { confirm: 'よろしいですか？' } , class:"btn btn-outline-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

