<p id="notice"><%= notice %></p>

<h1>教科一覧</h1>

<table class= "table table-hover table-dark">
  <thead class="thead-light">
    <tr>
      <th>教科</th>
      <th>配点</th>
      <th colspan="3"><%= link_to '教科追加', new_subject_path, class:"btn btn-sm btn-block btn-outline-success" %></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.name %></td>
        <td><%= subject.max_score %> 点</td>
        <td><%= link_to '表示', subject , class:"btn btn-outline-primary"%></td>
        <td><%= link_to '編集', edit_subject_path(subject) , class:"btn btn-outline-info"%></td>
        <td><%= link_to '削除', subject, method: :delete, data: { confirm: 'よろしいですか？' } , class:"btn btn-outline-danger"%></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

