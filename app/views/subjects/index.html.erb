<p id="notice"><%= notice %></p>

<h1>教科</h1>

<table>
  <thead>
    <tr>
      <th>氏名</th>
      <th>Max score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.name %></td>
        <td><%= subject.max_score %></td>
        <td><%= link_to '表示', subject %></td>
        <td><%= link_to '編集', edit_subject_path(subject) %></td>
        <td><%= link_to '削除', subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

