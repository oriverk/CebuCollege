<p id="notice"><%= notice %></p>

<h1>部活所属状況</h1>

<table class= "table table-hover table-dark" >
  <thead class="thead-light">
    <tr>
      <th>生徒</th>
      <th>部活</th>
      <th colspan="3"><%= link_to '所属情報追加', new_club_student_path, class:"btn btn-sm btn-block btn-outline-success"%></th>
    </tr>
  </thead>

  <tbody>
    <% @club_students.each do |club_student| %>
      <tr>
        <td><%= club_student.student.name %></td>
        <td><%= club_student.club.name %></td>
        <td><%= link_to '表示', club_student , class:"btn btn-outline-primary"%></td>
        <td><%= link_to '編集', edit_club_student_path(club_student) , class:"btn btn-outline-info"%></td>
        <td><%= link_to '削除', club_student, method: :delete, data: { confirm: 'よろしいですか？' } , class:"btn btn-outline-danger"%></td>
     </tr>
    <% end %>
  </tbody>
</table>

<br>

