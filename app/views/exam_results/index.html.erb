<div class="page-header">
<p id="notice"><%= notice %></p>

<h1>試験結果</h1>

<table>
  <thead>
    <tr>
      <th>氏名</th>
      <th>科目</th>
      <th>試験</th>
      <th>点数</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exam_results.each do |exam_result| %>
      <tr>
        <td><%= exam_result.student.name %></td>
        <td><%= exam_result.subject.name %></td>
        <td><%= exam_result.name %></td>
        <td><%= exam_result.score %></td>
        <td><%= link_to '表示', exam_result %></td>
        <td><%= link_to '編集', edit_exam_result_path(exam_result) %></td>
        <td><%= link_to '削除', exam_result, method: :delete, data: { confirm: 'よろしいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '試験結果追加', new_exam_result_path %>
<%= paginate @exam_results %>
</div>
