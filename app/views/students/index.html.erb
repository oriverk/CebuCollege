<div class="page-header">
<p id="notice"><%= notice %></p>

<h1>生徒データ</h1>

<table>
  <thead>
    <tr>
      <th>氏名</th>
      <th>Eメール</th>
      <th>性別</th>
      <th>年齢</th>
      <th>その他</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.try(:name) %></td>
        <td><%= student.email %></td>
        <td><%= display_name student.gender %></td>
        <td><%= student.try(:age) %></td>
        <td><%= student.try(:opinion) %></td>
        <td><%= link_to '表示', student %></td>
        <td><%= link_to '編集', edit_student_path(student) %></td>
        <td><%= link_to '削除', student, method: :delete, data: { confirm: 'よろしいですか？' } %></td>
        <td><%= link_to '(試験)作成', new_exam_result_path(student_id: student.id) %></td>
        <td><%= link_to '(部活)作成', new_club_student_path(student_id: student.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '生徒を追加', new_student_path %>
<%= paginate @students %>
</div>