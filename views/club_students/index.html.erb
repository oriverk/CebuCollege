<p id="notice"><%= notice %></p>

<h1>Club Students</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Club</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @club_students.each do |club_student| %>
      <tr>
        <td><%= club_student.student %></td>
        <td><%= club_student.club %></td>
        <td><%= club_student.name %></td>
        <td><%= link_to 'Show', club_student %></td>
        <td><%= link_to 'Edit', edit_club_student_path(club_student) %></td>
        <td><%= link_to 'Destroy', club_student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

